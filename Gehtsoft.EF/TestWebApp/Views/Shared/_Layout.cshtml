<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestWebApp</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/Kendo.UI/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/Kendo.UI/css/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/lib/Kendo.UI/css/kendo/kendo.common.min.css" />
    <link rel="stylesheet" href="~/lib/Kendo.UI/css/kendo/kendo.default.min.css" />
    <link rel="stylesheet" href="~/lib/Kendo.UI/css/kendo/kendo.default.mobile.min.css" />

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/Kendo.UI/script/jquery.min.js"></script>
    <script src="~/lib/Kendo.UI/script/kendo.all.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Product">Products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- <footer class="border-top footer text-muted"></footer> -->

    @RenderSection("Scripts", required: false)
</body>
</html>
